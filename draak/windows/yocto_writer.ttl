;====================================
;
; Renesas Draak Yocto Writer
;
;====================================
;=============================
; dir_top
;=============================
getdir __dir
sprintf2 dir_top "%s\..\.." __dir

;=============================
; os, board, baudrate
;=============================
board	 = "draak"
os	 = "yocto"
baudrate = 115200

;=============================
; connection check (yocto)
;=============================
sprintf2 __soc "%s\%s\config\os\%s\connection" dir_top board os
include __soc

func_name = "connection_check"
call call_func

;=============================
; load addr_map
;=============================
func_name = "load_addr_map"
call call_func

;=============================
; select srec dir
;=============================
soc_ws = "d3"
func_name = "select_srec_dir"
call call_func

;=============================
; load dip-swich settings
;=============================
sprintf2 sw_file "%s\%s\config\sw" dir_top board
func_name = "dip_switch_msg"
call call_func

func_name = "starterkit_type_init_normal"
call call_func

;=============================
; speed_up
;=============================
func_name = "speed_up"
call call_func

;=============================
; run_main
; same as StarterKit
;=============================
select_ans = "3"
yes_loop = 3
func_name = "starterkit_type_main"
call call_func

;=============================
; finish
;=============================
messagebox "finished" "message"

exit
;=============================
; call_func
;=============================
: call_func
sprintf2 func "%s\script\ttm\%s" dir_top func_name
include func
return
